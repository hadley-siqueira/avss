<div class="list-card">
  <div class="list-card__header">
      <h4 class="list-card__title"><%= circuit.title %></h4>
      <span class="list-card__info">Estações: 5</span>
  </div>

  <p class="list-card__text">
    <%= circuit.resume %>
  </p>

  <div class="list-card__footer">
    <span class="list-card__footer__update">Última atualização em <%= circuit.updated_at %></span>
    <div class="list-card__buttons">
      <%= link_to 'Aplicações', circuit_circuit_applications_path(circuit), class: 'button button--blue', data: { turbo_frame: '_top' } %>
      <%= link_to 'Acessar', edit_circuit_path(circuit), class: 'button button--blue', data: { turbo_frame: '_top' } %>
      <%= link_to 'Excluir', circuit, class: 'button button--red', data: { turbo_method: :delete } %>
    </div>
  </div>
</div>
