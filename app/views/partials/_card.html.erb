<div class="card">
    <div class="card-container">
        <% if defined?(iconPath) %>
            <%= image_tag iconPath %>
        <% else %>
            <span class="material-symbols-outlined card-icon">
                <%= defined?(iconName) ? iconName : "" %>
            </span>
        <% end %>
        <div class="card-content">
            <h4 class="card-title">
                <%= defined?(title) ? title : "" %>
            </h4>
            <p>
                <%= defined?(content) ? content : "" %>
            </p>
        </div>
    </div>
</div>