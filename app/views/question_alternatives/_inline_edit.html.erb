<div data-controller="debounced">
  <%= form_with(model: question_alternative, data: {debounced_target: "form"}) do |f| %>
    <%= f.check_box :correct, data: {action: "input->debounced#submitForm"} %>
    <%= f.text_field :body, data: {action: "input->debounced#submitForm"} %>
    <%= link_to "delete", question_alternative_path(question_alternative), data: {turbo_method: :delete }, class: "material-symbols-outlined", style: "color: red; text-decoration: none; font-size: 1.2rem" %>
  <% end %>
</div>
