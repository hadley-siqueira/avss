<% if @question.kind == 0 %>
  <%= button_to 'Discursiva', question_set_kind_path(@question, 'discursive'), method: :get, class: 'button button--option-selected' %>
  <%= button_to 'Objetiva', question_set_kind_path(@question, 'objective'), method: :get, class: 'button button--option' %>
  <%= button_to 'Anexo', question_set_kind_path(@question, 'attachment'), method: :get, class: 'button button--option' %>
<% elsif @question.kind == 1 %>
  <%= button_to 'Discursiva', question_set_kind_path(@question, 'discursive'), method: :get, class: 'button button--option' %>
  <%= button_to 'Objetiva', question_set_kind_path(@question, 'objective'), method: :get, class: 'button button--option-selected' %>
  <%= button_to 'Anexo', question_set_kind_path(@question, 'attachment'), method: :get, class: 'button button--option' %>
<% else %>
  <%= button_to 'Discursiva', question_set_kind_path(@question, 'discursive'), method: :get, class: 'button button--option' %>
  <%= button_to 'Objetiva', question_set_kind_path(@question, 'objective'), method: :get, class: 'button button--option' %>
  <%= button_to 'Anexo', question_set_kind_path(@question, 'attachment'), method: :get, class: 'button button--option-selected' %>
<% end %>
